%h1 Listing supplies

%table
  %thead
    %tr
      %th Category
      %th Name
      %th Expiry date
      %th Status
      %th Quantity
      %th
      %th
      %th

  %tbody
    - @supplies.each do |supply|
      %tr
        %td= supply.category
        %td= supply.name
        %td= supply.expiry_date
        %td= supply.status
        %td= supply.quantity
        %td= link_to 'Show', supply
        %td= link_to 'Edit', edit_supply_path(supply)
        %td= link_to 'Destroy', supply, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Supply', new_supply_path
