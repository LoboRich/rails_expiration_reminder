= form_for @supply do |f|
  - if @supply.errors.any?
    #error_explanation
      %h2= "#{pluralize(@supply.errors.count, "error")} prohibited this supply from being saved:"
      %ul
        - @supply.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :expiry_date
    = f.date_field :expiry_date
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :quantity
    = f.number_field :quantity
  .actions
    = f.submit 'Save'
